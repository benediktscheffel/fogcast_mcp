# Fogcast MCP Server Configuration
# Copy this file to .env and adjust the values as needed

# Required: Fogcast API Configuration
FOGCAST_BASE_URL=http://localhost:5000

# Optional: Request Configuration
FOGCAST_TIMEOUT=30

# Optional: Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=False

# Optional: MCP Configuration
MCP_SERVER_NAME=fogcast-weather
MCP_SERVER_VERSION=1.0.0

# Optional: Logging Configuration
LOG_LEVEL=INFO
